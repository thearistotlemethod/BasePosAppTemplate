<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text=""
                android:textSize="26dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:id="@+id/btn1"
                android:text="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

            <Button android:id="@+id/btn2"
                android:text="2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

            <Button android:id="@+id/btn3"
                android:text="3"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:id="@+id/btn4"
                android:text="4"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

            <Button android:id="@+id/btn5"
                android:text="5"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

            <Button android:id="@+id/btn6"
                android:text="6"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:id="@+id/btn7"
                android:text="7"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

            <Button android:id="@+id/btn8"
                android:text="8"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

            <Button android:id="@+id/btn9"
                android:text="9"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:id="@+id/btnClear"
                android:text="Clear"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

            <Button android:id="@+id/btn0"
                android:text="0"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

            <Button android:id="@+id/btnCancel"
                android:text="Cancel"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEnter"
                android:text="Enter"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:insetTop="0.5dp"
                android:insetBottom="0.5dp"
                android:insetLeft="0.5dp"
                android:insetRight="0.5dp"/>

        </LinearLayout>

    </LinearLayout>

</layout>
